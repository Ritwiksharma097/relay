# .env.example — Relay Environment Variables
# Copy this to .env and fill in your values.
# Then on your VPS: source .env  OR  use docker-compose env_file
# NEVER commit .env to git.

# ── Telegram ──────────────────────────────────────────────────────
# Get from @BotFather — /newbot or /mybots → API Token
BOT_TOKEN=your_bot_token_from_botfather

# Your Telegram group ID (already set: -5289768910)
TELEGRAM_GROUP_ID=-5289768910

# ── Database (PostgreSQL) ─────────────────────────────────────────
DB_HOST=localhost
DB_PORT=5432
DB_NAME=relay
DB_USER=relay_user
DB_PASS=your_secure_password_here

# ── API Server ────────────────────────────────────────────────────
API_HOST=0.0.0.0
API_PORT=8000

# Generate with: python3 -c "import secrets; print(secrets.token_hex(32))"
API_SECRET=generate_and_paste_here

# ── Daily Summary Schedule ────────────────────────────────────────
SUMMARY_HOUR=21
SUMMARY_MINUTE=0
TIMEZONE=Asia/Kolkata
